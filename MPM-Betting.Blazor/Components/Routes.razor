@using Microsoft.AspNetCore.Components.Authorization
@using MPM_Betting.Blazor.Components.Account.Shared
@using Blazorise
@using MudBlazor
@using MPM_Betting.Blazor.ComponentLibrary.DesktopView

<Router AppAssembly="typeof(Program).Assembly" >
    <NotFound>
        <NotFound/>
    </NotFound>
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
            <NotAuthorized>
                <RedirectToLogin/>
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1"/>
    </Found>

</Router>

<ModalProvider UseModalStructure Animated Size="ModalSize.Fullscreen" />
<ToastProvider />

@{
    var darkMode = true;
    <MudThemeProvider @bind-IsDarkMode="@darkMode" @rendermode="InteractiveServer" />
    <MudDialogProvider/>
    <MudSnackbarProvider/>
}
