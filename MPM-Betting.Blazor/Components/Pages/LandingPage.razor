@page "/"
@using Blazorise
@inject NavigationManager NavManager


<div class="container-fluid">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-12 col-md-5 LandingMainContainer">
            <div class="MainText">
                <div>You have the <span>knowledge</span>!</div>
                <div>We have the <span>bets</span>!</div>
            </div>
            <div class="SideText">
                Join many different players and bet on your favourite sports and Leagues. <br/> 
                Join groups and compete with your friends! <br/>
                Enter the world of betting and win big!
            </div>
            <div class="LandingButtons">
                <Button @onclick="() => NavigateTo(ENavigationType.Dashboard)">Start Betting</Button>
                <Button @onclick="() => NavigateTo(ENavigationType.Register)">Sign up</Button>
            </div>
        </div>

        <div class="d-none d-md-flex col-6 LandingPageImage">
            <img src="Images/player.png" alt="Player"/>
        </div>
    </div>    
</div>

@code {

    protected void NavigateTo(ENavigationType type)
    {
        switch (type)
        {
            case ENavigationType.Login:
                NavManager.NavigateTo("/Account/Login");
                break;
            case ENavigationType.Register:
                NavManager.NavigateTo("/Account/Register");
                break;
            case ENavigationType.Dashboard:
                NavManager.NavigateTo("/dashboard");
                break;
        }
    }
    
    public enum ENavigationType
    {
        Register,
        Login,
        Dashboard
    }
}